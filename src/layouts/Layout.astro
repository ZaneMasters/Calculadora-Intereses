---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Calculadora de Rendimientos", 
  description = "Calcula y compara los rendimientos de tus inversiones en diferentes cuentas de ahorro en bancos de Colombia." 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url);
---


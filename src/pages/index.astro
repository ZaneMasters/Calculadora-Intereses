---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.jsx';
import CalculatorWrapper from '../components/CalculatorWrapper.jsx';
import BankComparison from '../components/BankComparison.jsx';
---

<Layout>
  <Hero client:load />
  
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8 relative z-20 pb-20 space-y-16">
    <section id="calculator-section">
      <CalculatorWrapper client:load />
    </section>
    
    <section id="comparison-section">
      <BankComparison client:load />
    </section>
  </div>
</Layout>
